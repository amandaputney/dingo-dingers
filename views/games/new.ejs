<%- include('../partials/header') %>

<form id="new-form" action="/games" method="POST">
    <label>Date:</label>
    <input type="text" class="form-input" name="date">
    <label>Time:</label>
    <input type="text" class="form-input" name="date">
    <label>Event:</label>
    <select name="eventType" class="form-input">
        <option value="Win">Win</option>
        <option value="Loss">Loss</option>
        <option value="Tie">Tie</option>
        <option value="Pick Up Game">Pick Up Game</option>
    </select>
    <label>Location:</label>
    <input type="text" class="form-input" name="location">
    <input type="submit" class="form-input-button" value="Add Game">
</form>         