<%- include('../partials/header') %>

    <!-- DETAILS page -->

    <section id="show-page">
        <div>Name: </div>
        <div>
            <%= player.name %>
        </div>
        <div>Position: </div>
        <div>
            <%= player.position %>
        </div>
        <div>Bats: </div>
        <div>
            <%= player.bats %>
        </div>
        <div>Throws: </div>
        <div>
            <%= player.throws %>
        </div>
        <div>Birth Date: </div>
        <div>
            <%= player.birthDate %>
        </div>
        <div>Birth Place: </div>
        <div>
            <%= player.birthPlace %>
        </div>
        <div>Home Runs: </div>
        <div>
            <%= player.homeRuns %>
        </div>
        <div>Active: </div>
        <div>
            <%= player.active %>
        </div>

    </section>
    <br>

    <% if (user) { %>

        <table id="list">
            <td><a href="/players">BACK</a></td>
            <td><a href="/players/<%= player._id %>/edit">EDIT</a></td>
            <td>
                <form action="/players/<%= player._id %>?_method=DELETE" method="POST"><input type="submit"
                        class="form-input-button" value="DELETE">
                </form>
            </td>
        </table>

        <% } %>

            <%- include('../partials/footer') %>